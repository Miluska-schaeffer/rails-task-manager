
<h1> My Tasks </h1>
<div>
  <ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <i class="fas fa-check"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
   <%= link_to task.title, task_path(task) %>
    <%= link_to  task_destroy_path(task), method: :delete,  data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash" aria-hidden="true"></i>
    <% end %>
   </li>
   <% end %>
 </ul>
</div>



<p> <%= link_to "+ Add new task", tasks_new_path %></p>
